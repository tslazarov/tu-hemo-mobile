<Page navigatingTo="onNavigatingTo"
    loaded="pageLoaded" 
    actionBarHidden="true"
    class="page" 
    xmlns="http://schemas.nativescript.org/tns.xsd"
    xmlns:bottomNav="nativescript-bottom-navigation"  >
    
    <GridLayout columns="*"
                rows="*, auto">
            <Frame row="0" id="contentFrame" defaultPage="search/search-page">
            </Frame>
        <bottomNav:BottomNavigation activeColor="#c91c1c"
                                    inactiveColor="#3a1a1a"
                                    backgroundColor="#f2f2f2"
                                    keyLineColor="#c91c1c"
                                    loaded="bottomNavigationLoaded"
                                    row="1">
            <bottomNav:BottomNavigationTab title="Donate" icon="ic_donate"></bottomNav:BottomNavigationTab>
            <bottomNav:BottomNavigationTab title="Centers" icon="ic_med_centers"></bottomNav:BottomNavigationTab>
            <bottomNav:BottomNavigationTab title="Request" icon="ic_request"></bottomNav:BottomNavigationTab>
            <bottomNav:BottomNavigationTab title="Statistics" icon="ic_stats"></bottomNav:BottomNavigationTab>
            <bottomNav:BottomNavigationTab title="Settings" icon="ic_settings"></bottomNav:BottomNavigationTab>
        </bottomNav:BottomNavigation>
    </GridLayout>
</Page>