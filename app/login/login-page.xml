<Page navigatingTo="onNavigatingTo"
    actionBarHidden="true"
    class="page"
    loaded="onPageLoaded"
    xmlns="http://schemas.nativescript.org/tns.xsd">
    <GridLayout rows="180,*,auto">
        <StackLayout row="0">
            <ListPicker id="languagePicker" items="{{ languages }}" selectedIndex="{{ selectedLanguage }}" style="margin:0% 25%" loaded="onListPickerLoaded" ></ListPicker>           
        </StackLayout>
        <StackLayout orientation="vertical" verticalAlignment="center" row="1" class="p-t-15" id="LoginPanel" backgroundColor="yellow">
            <Image src="https://play.nativescript.org/dist/assets/img/NativeScript_logo.png" width="150" class="m-b-30"></Image>
            <TextField class="m-t-10 m-b-10 m-l-15 m-r-15" hint="{{ emailHint }}" keyboardType="email" autocorrect="false" autocapitalization="none"
                text="{{ email }}"></TextField>
            <TextField class="m-t-10 m-b-10 m-l-15 m-r-15" hint="{{ passwordHint }}" secure="true" autocorrect="false" autocapitalization="none"
                text="{{ password }}"></TextField>
            <Button class="btn btn-primary" text="{{ login }}" tap="onLoginButtonTap"></Button>
                <Button class="btn btn-secondary" text="{{ loginFacebook }}" tap="onLoginWithFacebookButtonTap"></Button>
        </StackLayout>
        <StackLayout row="2">
            <Label text="Don't have an account, Register now" tap="onNavigateRegisterTap"/>
        </StackLayout>
    </GridLayout>
</Page>