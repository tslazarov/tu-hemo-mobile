<Page navigatingTo="onNavigatingTo" 
    actionBarHidden="true"
    class="page" 
    xmlns="http://schemas.nativescript.org/tns.xsd">
    <GridLayout rows="auto,*,2*">
        <GridLayout row="0" columns="auto,*" width="100%" class="custom-action-bar">
            <Image col="0" id="back" src="res://ic_back_arrow" class="m-l-20" verticalAlignment="center" stretch="aspectFit" tap="onBackTap"></Image>
            <Label col="1" text="{{ changePassword }}" class="h3 action-bar-title"></Label>
        </GridLayout>
        <StackLayout orientation="vertical" verticalAlignment="top" row="2" class="p-t-15">
            <TextField class="m-15" hint="{{ oldPasswordHint }}" secure="true" autocorrect="false" autocapitalization="none"
                text="{{ oldPassword }}"></TextField>
                <TextField class="m-15" hint="{{ newPasswordHint }}" secure="true" autocorrect="false" autocapitalization="none"
                text="{{ newPassword }}"></TextField>
                <TextField class="m-15" hint="{{ confirmNewPasswordHint }}" secure="true" autocorrect="false" autocapitalization="none"
                text="{{ confirmNewPassword }}"></TextField>
            <Button class="btn btn-primary" text="{{ change }}" tap="onChangeTap"></Button>
        </StackLayout>
    </GridLayout>
</Page>