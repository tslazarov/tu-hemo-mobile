<Page navigatingTo="onNavigatingTo"
    actionBarHidden="true"
    class="page"
    xmlns="http://schemas.nativescript.org/tns.xsd">
    <GridLayout rows="auto, 20, auto, 20, auto, 20, auto, 20, auto, 20, auto, 20, auto, auto">
        <StackLayout orientation="vertical" row="0" verticalAlignment="top" class="p-t-15 m-t-30 m-b-20">
            <Image src="res://profile_image" width="100" class="m-t-30 m-b-20 profile-image"></Image>
            <Label class="profile-name-label" text="{{ name }}"></Label>
            <Label class="profile-email-label m-b-30" text="{{ email }}"></Label>
        </StackLayout>
        <StackLayout row="1" class="hr-regular"></StackLayout>
        <StackLayout row="2">
        	<Label class="settings-label m-10">
                <FormattedString>
                    <Span text="{{ changePersonalInformation }}"></Span>
                </FormattedString>
            </Label>
        </StackLayout>
        <StackLayout row="3" class="hr-regular"></StackLayout>
        <StackLayout row="4">
        	<Label class="settings-label m-10">
                <FormattedString>
                    <Span text="{{ changeEmail }}"></Span>
                </FormattedString>
            </Label>
        </StackLayout>
        <StackLayout row="5" class="hr-regular"></StackLayout>
        <StackLayout row="6">
        	<Label class="settings-label m-10">
                <FormattedString>
                    <Span text="{{ changePassword }}"></Span>
                </FormattedString>
            </Label>
        </StackLayout>
        <StackLayout row="7" class="hr-regular"></StackLayout>
        <StackLayout row="8">
        	<Label class="settings-label m-10">
                <FormattedString>
                    <Span text="{{ changeLanguage }}"></Span>
                </FormattedString>
            </Label>
        </StackLayout>
        <StackLayout row="9" class="hr-regular"></StackLayout>
        <StackLayout row="10">
        	<Label class="settings-label m-10">
                <FormattedString>
                    <Span text="{{ deleteAccount }}"></Span>
                </FormattedString>
            </Label>
        </StackLayout>
        <StackLayout row="11" class="hr-regular"></StackLayout>
        <StackLayout row="12">
        	<Label class="settings-label m-10">
                <FormattedString>
                    <Span text="{{ logOut }}"></Span>
                </FormattedString>
            </Label>
        </StackLayout>
    </GridLayout>
</Page>