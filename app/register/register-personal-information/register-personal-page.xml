<Page navigatingTo="onNavigatingTo" class="page" xmlns="http://schemas.nativescript.org/tns.xsd">
    <GridLayout rows="*,auto">
        <StackLayout orientation="vertical" verticalAlignment="center" row="0" class="p-t-15" id="RegisterPanel">
            <TextField class="m-t-10 m-b-10 m-l-15 m-r-15" hint="{{ firstNameHint }}" keyboardType="email" autocorrect="false" autocapitalization="none"
                text="{{ firstName }}"></TextField>
            <TextField class="m-t-10 m-b-10 m-l-15 m-r-15" hint="{{ lastNameHint }}" keyboardType="email" autocorrect="false" autocapitalization="none"
                text="{{ lastName }}"></TextField>
            <TextField class="m-t-10 m-b-10 m-l-15 m-r-15" hint="{{ phoneNumberHint }}" keyboardType="phone" autocorrect="false" autocapitalization="none"
                text="{{ phoneNumber }}">
            </TextField>
            <Label text="Blood type" class="m-l-20 h4"/>
            <WrapLayout orientation="horizontal" class="m-l-15 m-r-15">
                <Label id="option-1" text="A+" class="blood-type-button" tap="onBloodTypeTap"/>
                <Label id="option-2" text="A-" class="blood-type-button" tap="onBloodTypeTap"/>
                <Label id="option-3" text="B+" class="blood-type-button" tap="onBloodTypeTap"/>
                <Label id="option-4" text="B-" class="blood-type-button" tap="onBloodTypeTap"/>
                <Label id="option-5" text="O+" class="blood-type-button" tap="onBloodTypeTap"/>
                <Label id="option-6" text="O-" class="blood-type-button" tap="onBloodTypeTap"/>
                <Label id="option-7" text="AB+" class="blood-type-button" tap="onBloodTypeTap" />
                <Label id="option-8" text="AB-" class="blood-type-button" tap="onBloodTypeTap" />
            </WrapLayout>
            <Button class="btn btn-primary" text="{{ register }}" tap="onRegisterTap"></Button>
        </StackLayout>
        <StackLayout row="1" backgroundColor="red">
            <Label text="asd"/>
        </StackLayout>
    </GridLayout>
</Page>